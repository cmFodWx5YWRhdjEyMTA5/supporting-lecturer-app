<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/content_padding_8_dp">

    <ImageView
        android:id="@+id/imv_filter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/fill_light" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/content_padding_8_dp"
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toEndOf="@id/imv_filter"
        app:layout_constraintStart_toStartOf="@id/imv_filter"
        app:layout_constraintTop_toBottomOf="@id/imv_filter"
        tools:text="Fill Light" />

    <ImageView
        android:id="@+id/imv_tick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_tick"
        app:layout_constraintBottom_toBottomOf="@id/imv_filter"
        app:layout_constraintEnd_toEndOf="@id/imv_filter"
        app:layout_constraintStart_toStartOf="@id/imv_filter"
        app:layout_constraintTop_toTopOf="@id/imv_filter" />

</androidx.constraintlayout.widget.ConstraintLayout>