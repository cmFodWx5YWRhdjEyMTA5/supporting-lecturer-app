<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.soict.hoangviet.supportinglecturer.customview.BaseToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:icon_left="back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/language_toolbar_title" />

    <ImageView
        android:id="@+id/imv_flag_en"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:src="@drawable/flag_england"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imv_flag_vn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <ImageView
        android:id="@+id/imv_flag_vn"
        tools:background="@drawable/bg_flag_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_flag_vn"
        app:layout_constraintBottom_toBottomOf="@id/imv_flag_en"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imv_flag_en"
        app:layout_constraintTop_toTopOf="@id/imv_flag_en" />


</androidx.constraintlayout.widget.ConstraintLayout>