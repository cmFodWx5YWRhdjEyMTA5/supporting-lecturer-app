<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <declare-styleable name="BaseRecyclerView">
        <attr name="brv_padding" format="dimension" />
        <attr name="brv_padding_start" format="dimension" />
        <attr name="brv_padding_end" format="dimension" />
        <attr name="brv_padding_top" format="dimension" />
        <attr name="brv_padding_bottom" format="dimension" />
        <attr name="brv_enable_refresh" format="boolean" />
        <attr name="brv_text_no_result" format="string|reference" />
    </declare-styleable>

</resources>
