<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SplitPaneLayout">
        <attr name="orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="splitterSize" format="dimension" />
        <attr name="splitterMovable" format="boolean" />
        <attr name="splitterPosition" format="dimension|fraction" />
        <attr name="splitterBackground" format="reference|color" />
        <attr name="splitterDraggingBackground" format="reference|color" />
        <attr name="splitterTouchSlop" format="dimension" />
        <!-- TODO: Also support fraction values-->
        <attr name="paneSizeMin" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BaseRowSetting">
        <attr name="settingName" format="string" />
        <attr name="disableLine" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BaseToolbar">
        <attr name="icon_left" format="enum">
            <enum name="none" value="0" />
            <enum name="menu" value="1" />
            <enum name="back" value="2" />
        </attr>
        <attr name="icon_right" format="enum">
            <enum name="none" value="0" />
            <enum name="search" value="1" />
            <enum name="save" value="2" />
            <enum name="share" value="3" />
            <enum name="menu" value="4" />
        </attr>
        <attr name="title" format="string" />
        <attr name="title_right" format="string" />
    </declare-styleable>
</resources>