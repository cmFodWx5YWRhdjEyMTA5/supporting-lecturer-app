<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/text_font_color_layout_width"
    android:layout_height="@dimen/text_font_color_layout_height"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <!-- bg -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/spen_common_setting_bg"/>

    <!-- title -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_font_color_title_layout_height"
        android:layout_alignParentTop="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingStart="@dimen/text_font_color_title_text_padding"
            android:paddingEnd="@dimen/text_font_color_title_text_padding"
            android:text="@string/pen_string_font_color"
            android:textColor="@color/setting_title_string_color"
            android:textSize="@dimen/text_font_color_title_text_size" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="@dimen/text_font_color_title_done_text_padding"
                android:paddingEnd="@dimen/text_font_color_title_done_text_padding"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:minWidth="0dp"
                android:textColor="#f46a4e"
                android:textSize="@dimen/text_font_color_done_button_text_size"
                android:textAllCaps="true"
                android:focusable="true" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- Color Pallet -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_pen_color_layout_height"
        android:layout_alignParentBottom="true" >
    </RelativeLayout>

</RelativeLayout>