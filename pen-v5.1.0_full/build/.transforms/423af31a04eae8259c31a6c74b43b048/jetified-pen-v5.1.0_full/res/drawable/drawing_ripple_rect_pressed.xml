<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/drawing_btn_bg_pressed_color"
    tools:ignore="NewApi">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/drawing_btn_bg_selected_color"/>
            <size android:width="@dimen/drawing_btn_bg_pressed_ripple_shape_size" android:height="@dimen/drawing_btn_bg_pressed_ripple_shape_size"/>
        </shape>
    </item>

    <item>
        <selector>
            <item
                android:drawable="@drawable/drawing_ripple_rect_selected"
                android:state_selected="true" />
        </selector>
    </item>
</ripple>
