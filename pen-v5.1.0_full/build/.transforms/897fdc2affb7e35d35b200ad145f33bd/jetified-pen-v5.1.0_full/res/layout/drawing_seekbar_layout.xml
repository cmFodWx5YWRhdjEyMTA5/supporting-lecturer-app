<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:background="@android:color/transparent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingStart="18dp"
        android:includeFontPadding="false"
        android:gravity="left|top"
        android:textColor="#252525"
        android:singleLine="true"
        android:textSize="@dimen/drawing_seekbar_attribute_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/drawing_seekbar_progress_text_size" />

    <!-- mMinusButtonLayout -->

    <RelativeLayout
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="31dp" >

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp" />

        <Button
            android:layout_width="19dp"
            android:layout_height="19dp" />
    </RelativeLayout>

    <!-- mPlusButtonLayout -->

    <RelativeLayout
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="31dp" >

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp" />

        <Button
            android:layout_width="19dp"
            android:layout_height="19dp" />
    </RelativeLayout>

    <SeekBar
        android:layout_width="187dp"
        android:layout_height="19dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="31dp" />

    <!-- divider 1 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8px"
        android:layout_marginStart="8px"
        android:background="#ffc7c7c7" >
    </RelativeLayout>

    <!-- divider 2 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8px"
        android:layout_marginStart="8px"
        android:background="#ffc7c7c7"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>