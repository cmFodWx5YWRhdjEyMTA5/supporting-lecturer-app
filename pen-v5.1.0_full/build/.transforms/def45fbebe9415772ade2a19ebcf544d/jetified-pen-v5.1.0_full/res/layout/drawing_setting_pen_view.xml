<?xml version="1.0" encoding="utf-8"?>
<com.samsung.android.sdk.pen.settingui.SpenBrushPenView
    android:id="@+id/pen_image"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:gravity="center_horizontal|bottom">

    <ImageButton
        android:id="@+id/pen_hover_info"
        android:layout_width="@dimen/drawing_brush_type_button_width"
        android:layout_height="@dimen/drawing_brush_type_button_height"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/color_mask"
        android:layout_width="@dimen/drawing_brush_type_button_width"
        android:layout_height="@dimen/drawing_brush_type_button_mask_height"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:focusable="false"/>
</com.samsung.android.sdk.pen.settingui.SpenBrushPenView>