<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawing_brush_type_layout"
    android:layout_width="@dimen/drawing_brush_type_view_open_width"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#fafafa" >

    <include
        android:id="@+id/menu_pen1"
        layout="@layout/drawing_setting_pen_view"
        android:layout_width="@dimen/drawing_brush_type_button_width"
        android:layout_height="@dimen/drawing_brush_type_button_height"
        android:layout_alignParentBottom="true" />

    <include
        android:id="@+id/menu_pen2"
        layout="@layout/drawing_setting_pen_view"
        android:layout_width="@dimen/drawing_brush_type_button_width"
        android:layout_height="@dimen/drawing_brush_type_button_height"
        android:layout_alignParentBottom="true"
        android:focusable="false" />

    <RelativeLayout
        android:id="@+id/drawing_brush_type_setting_layout_talkback"
        android:layout_width="@dimen/drawing_brush_type_button_width"
        android:layout_height="@dimen/drawing_brush_type_button_height"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" >

        <ImageButton
            android:id="@+id/drawing_brush_type_setting_layout_airview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>
    </RelativeLayout>
</RelativeLayout>
