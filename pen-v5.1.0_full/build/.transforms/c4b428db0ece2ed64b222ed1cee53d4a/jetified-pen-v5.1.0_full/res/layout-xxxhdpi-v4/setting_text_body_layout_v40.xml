<?xml version="1.0" encoding="utf-8"?>
<!-- TextLayout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa" >

    <!-- Body -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:fadingEdgeLength="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="9dp" >

            <!-- font type -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginRight="6dp" >

                <RelativeLayout
                    android:layout_width="91dp"
                    android:layout_height="26dp"
                    android:layout_centerInParent="true"
                    android:background="#00000000" >

                    <!-- fontTypeSpinner -->

                    <TextView
                        android:id="@+id/text_font_type_name"
                        android:layout_width="67dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="6dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:textColor="#131313"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="26dp"
                        android:layout_toRightOf="@+id/text_font_type_name" />

                    <View
                        android:layout_width="91dp"
                        android:layout_height="26dp"
                        android:focusable="true" />
                </RelativeLayout>
                <ImageButton
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:clickable="false"
                    android:focusableInTouchMode="false"/>
            </RelativeLayout>

            <!-- font size -->

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginRight="6.5dp" >

                <RelativeLayout
                    android:layout_width="46dp"
                    android:layout_height="26dp"
                    android:layout_centerInParent="true"
                    android:background="#00000000" >

                    <TextView
                        android:id="@+id/text_font_size"
                        android:layout_width="19dp"
                        android:layout_height="26dp"
                        android:layout_marginLeft="6dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical|left"
                        android:singleLine="true"
                        android:textColor="#131313"
                        android:textSize="14dp" />

                    <ImageView
                        android:layout_width="21dp"
                        android:layout_height="26dp"
                        android:layout_toRightOf="@+id/text_font_size" />

                    <View
                        android:layout_width="46dp"
                        android:layout_height="26dp"
                        android:focusable="true" />
                </RelativeLayout>
                <ImageButton
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:clickable="false"
                    android:focusableInTouchMode="false"/>
            </RelativeLayout>

            <!-- bold -->

            <RelativeLayout
                android:layout_width="39dp"
                android:layout_height="47dp"
                android:layout_marginRight="0dp"
                android:background="#00000000" >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:focusable="true"
                    android:scaleType="center" />
            </RelativeLayout>

            <!-- italic -->

            <RelativeLayout
                android:layout_width="39dp"
                android:layout_height="47dp"
                android:layout_marginRight="0dp"
                android:background="#00000000" >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:focusable="true"
                    android:scaleType="center" />
            </RelativeLayout>

            <!-- underline -->

            <RelativeLayout
                android:layout_width="39dp"
                android:layout_height="47dp"
                android:layout_marginRight="0dp"
                android:background="#00000000" >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:focusable="true"
                    android:scaleType="center" />
            </RelativeLayout>

            <!-- color -->

            <RelativeLayout
                android:layout_width="39dp"
                android:layout_height="47dp"
                android:layout_marginRight="0dp"
                android:background="#00000000" >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center" />

                <RelativeLayout
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="2.5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="6dp"
                        android:background="@android:color/black" />
                </RelativeLayout>
            </RelativeLayout>

            <!-- bullet -->

            <RelativeLayout
                android:id="@+id/text_bullet"
                android:layout_width="39dp"
                android:layout_height="47dp"
                android:layout_marginRight="6.5dp"
                android:background="#00000000" >

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:focusable="true"
                    android:scaleType="center" />
            </RelativeLayout>

            <!-- alignment -->

            <RelativeLayout
                android:id="@+id/text_align_button"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_marginRight="15dp" >

                <RelativeLayout
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" >

                    <ImageView
                        android:id="@+id/text_align_image"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="26dp"
                        android:layout_toRightOf="@+id/text_align_image" />

                    <View
                        android:layout_width="44dp"
                        android:layout_height="26dp"
                        android:focusable="true" />
                </RelativeLayout>
                <ImageButton
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:background="#00ffffff"
                    android:clickable="false"
                    android:focusableInTouchMode="false"/>
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="#E0E0E0" />

</RelativeLayout>
